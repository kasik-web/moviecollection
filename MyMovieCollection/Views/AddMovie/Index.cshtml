@model MyMovieCollection.Models.ViewModels.SearchRequestVM

<style>
    body {
        background-color: #DCDCDC
    }
</style>



<div class="container text-center"
    <div class="row" style="position: absolute; top: 35%; width: 90%; ">
        <div class="col-lg-4 col-md-6 col-sm-6 col-8 offset-lg-4 offset-md-3 offset-sm-3 offset-2">
            <h5>Search your favorite movies</h5>
            <br />
            <br />
            <form class="d-flex" role="search">
                <input asp-for="Request"
                class="form-control"
                type="search"
                placeholder="Search"
                aria-label="Search"/>                
                <button asp-action="SearchResult" class="btn btn-dark" type="submit">Search</button>
                
            </form>
        <span asp-validation-for="Request" class="text-danger"></span>
        </div>       
    </div>
</div>



@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
