@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">            
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="btn btn-secondary btn-sm"><i class="fa-duotone fa-user"></i></a>&ensp;
            </li>
            <li>
                <button type="submit" class="btn btn-danger btn-sm" title="Exit"><i class="fa-solid fa-right-from-bracket"></i></button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        
        <li><a asp-area="Identity" asp-page="/Account/Register" class="btn btn-secondary btn-sm">Register</a></li>&ensp;
        <li><a asp-area="Identity" asp-page="/Account/Login" class="btn btn-secondary btn-sm"> Login</a></li>
    </ul>
}
